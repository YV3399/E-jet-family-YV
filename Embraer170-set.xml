<?xml version="1.0" encoding="UTF-8" ?>
<PropertyList include="ERJ-set-common.xml">
    <sim>
        <description>Embraer Regional Jet 170 (170-100)</description>
        <aero>ERJ170</aero>
        <engine>GE_CF34-8E</engine>

        <model>
            <path>Aircraft/E-jet-family/XMLs/ERJ-170.xml</path>
            <door n="0">
                <position-x-m>-9.443</position-x-m>
            </door>
        </model>

        <rating>
            <FDM type="int">3</FDM>
            <systems type="int">3</systems>
            <cockpit type="int">4</cockpit>
            <model type="int">5</model>
        </rating>

        <view n="0">
            <config>
                <z-offset-m archive="y">-11.57</z-offset-m>
            </config>
        </view>
        <view n="199">
            <config>
                <z-offset-m archive="y">-12.0</z-offset-m>
            </config>
        </view>
        <view n="198">
            <config>
                <z-offset-m archive="y">-11.57</z-offset-m>
            </config>
        </view>
        <view n="103">
            <config>
                <z-offset-m archive="y">-11.57</z-offset-m>
            </config>
        </view>
        <view n="104">
            <name>Passenger View (Economy Class)</name>
        </view>

        <previews>
            <preview>
                <type>exterior</type>
                <path>Splash/E170/440.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>exterior</type>
                <path>Splash/E170/939.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>exterior</type>
                <path>Splash/E170/119.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>exterior</type>
                <path>Splash/E170/756.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>exterior</type>
                <path>Splash/E170/024.jpg</path>
                <splash type="bool">true</splash>
            </preview>
            <preview>
                <type>exterior</type>
                <path>Splash/E170/651.jpg</path>
                <splash type="bool">true</splash>
            </preview>
        </previews>
    </sim>

    <limits>
        <mass-and-balance>
            <maximum-takeoff-mass-lbs>85098</maximum-takeoff-mass-lbs>
            <maximum-landing-mass-lbs>73414</maximum-landing-mass-lbs>
            <maximum-payload-lbs>21515</maximum-payload-lbs>
            <maximum-ramp-mass-lbs>88703</maximum-ramp-mass-lbs>
            <maximum-zero-fuel-mass-lbs>68123</maximum-zero-fuel-mass-lbs>
        </mass-and-balance>
    </limits>

    <payload>
        <weight n="1">
            <name>Passengers</name>
            <weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[1]"/>
            <min-lb type="double">0</min-lb>
            <max-lb type="double">21515</max-lb>
        </weight>
    </payload>

    <instrumentation>
        <mcdu>
            <ident>
                <model>E170-100</model>
                <engines>GE_CF34-8E</engines>
            </ident>
        </mcdu>
    </instrumentation>

    <fadec>
        <configuration>
            <idle-n1>25.0</idle-n1>
            <max-n1>99.5</max-n1>
        </configuration>
    </fadec>
</PropertyList>
