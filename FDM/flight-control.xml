<?xml version="1.0"?>

<flight_control name="FCS: E-Jet-Family">
    <channel name="Pitch">
        <fcs_function name="fcs/elevator-sum">
            <function>
                <sum>
                    <p>/controls/flight/elevator</p>
                    <p>/it-autoflight/internal/elevator</p>
                </sum>
            </function>
            <output>fcs/elevator-sum</output>
        </fcs_function>

        <summer name="Pitch Trim Sum">
            <input>fcs/elevator-cmd-fbw</input>
            <input>fcs/pitch-trim-cmd-norm</input>
            <clipto>
                <min> -1.5 </min>
                <max>  1.5 </max>
            </clipto>
        </summer>
        
        <aerosurface_scale name="Elevator Control">
            <input>fcs/pitch-trim-sum</input>
            <range>
                <min> -0.25 </min>
                <max>  0.25 </max>
            </range>
            <output>fcs/elevator-pos-rad</output>
        </aerosurface_scale>
        
        <aerosurface_scale name="elevator normalization">
            <input>fcs/elevator-pos-rad</input>
            <domain>
                <min> -0.25 </min>
                <max>  0.25 </max>
            </domain>
            <range>
                <min> -1 </min>
                <max>  1 </max>
            </range>
            <output>fcs/elevator-pos-norm</output>
        </aerosurface_scale>
    </channel>
    
    <channel name="Roll">
        <fcs_function name="fcs/aileron-sum">
            <function>
                <sum>
                    <p>/controls/flight/aileron</p>
                    <p>/it-autoflight/internal/aileron</p>
                </sum>
            </function>
            <output>fcs/aileron-sum</output>
        </fcs_function>

        <summer name="Roll Trim Sum">
            <input>fcs/aileron-sum</input>
            <input>fcs/roll-trim-cmd-norm</input>
            <clipto>
                <min> -1 </min>
                <max>  1 </max>
            </clipto>
        </summer>
        
        <aerosurface_scale name="Left Aileron Control">
            <input>fcs/roll-trim-sum</input>
            <range>
                <min> -0.25 </min>
                <max>  0.25 </max>
            </range>
            <output>fcs/left-aileron-pos-rad</output>
        </aerosurface_scale>
        
        <aerosurface_scale name="Right Aileron Control">
            <input>fcs/roll-trim-sum</input>
            <range>
                <min> -0.25 </min>
                <max>  0.25 </max>
            </range>
            <output>fcs/right-aileron-pos-rad</output>
        </aerosurface_scale>
        
        <aerosurface_scale name="left aileron normalization">
            <input>fcs/left-aileron-pos-rad</input>
            <domain>
                <min> -0.25 </min>
                <max>  0.25 </max>
            </domain>
            <range>
                <min> -1 </min>
                <max>  1 </max>
            </range>
            <output>fcs/left-aileron-pos-norm</output>
        </aerosurface_scale>
        
        <aerosurface_scale name="right aileron normalization">
            <input>fcs/right-aileron-pos-rad</input>
            <domain>
                <min> -0.25 </min>
                <max>  0.25 </max>
            </domain>
            <range>
                <min> -1 </min>
                <max>  1 </max>
            </range>
            <output>fcs/right-aileron-pos-norm</output>
        </aerosurface_scale>
        
    </channel>
    
    <channel name="Yaw">
        <summer name="Rudder Command Sum">
            <input>-/controls/flight/rudder</input>
            <input>/it-autoflight/internal/rudder</input>
            <input>fcs/yaw-trim-cmd-norm</input>
            <clipto>
                <min> -0.55 </min>
                <max>  0.55 </max>
            </clipto>
        </summer>
        
        <scheduled_gain name="Yaw Damper Rate">
            <input>velocities/r-aero-rad_sec</input>
            <table>
                <independentVar lookup="row">velocities/ve-kts</independentVar>
                <tableData>
                    30     0.00
                    60     2.00
                </tableData>
            </table>
            <gain>fcs/yaw-damper-enable</gain>
        </scheduled_gain>
        
        <scheduled_gain name="Yaw Damper Beta">
            <input>aero/beta-rad</input>
            <table>
                <independentVar>aero/qbar-psf</independentVar>
                <tableData>
                    3.0000   0.0000
                    11.0000   1.0000
                </tableData>
            </table>
            <gain>aero-config/coefficients/yaw-damper-beta</gain>
        </scheduled_gain>
        
        <scheduled_gain name="Yaw Damper">
            <input>velocities/r-aero-rad_sec</input>
            <table>
                <independentVar>velocities/mach</independentVar>
                <tableData>
                    0.00        0.0
                    0.10        0.0
                    0.11        1.0
                </tableData>
            </table>
            <gain>aero-config/coefficients/yaw-damper-rate</gain>
        </scheduled_gain>

        <summer name="Yaw Damper Sum">
            <input>fcs/yaw-damper</input>
            <input>fcs/yaw-damper-beta</input>
        </summer>
        
        <scheduled_gain name="Yaw Damper Final">
            <input>fcs/yaw-damper-sum</input>
            <table>
                <independentVar>velocities/mach</independentVar>
                <tableData>
                    0.00        0.0
                    0.10        0.0
                    0.11        1.0
                </tableData>
            </table>
            <gain>fcs/yaw-damper-enable</gain>
        </scheduled_gain>
        
        <summer name="Rudder Sum">
            <input>fcs/rudder-command-sum</input>
            <input>fcs/yaw-damper-final</input>
            <clipto>
                <min> -1 </min>
                <max>  1 </max>
            </clipto>
        </summer>
        
        <aerosurface_scale name="Rudder Control">
            <input>fcs/rudder-sum</input>
            <range>
                <min> -0.530 </min>
                <max>  0.530 </max>
            </range>
            <output>fcs/rudder-pos-rad</output>
        </aerosurface_scale>
        
        <aerosurface_scale name="rudder normalization">
            <input>fcs/rudder-pos-rad</input>
            <domain>
                <min> -0.530 </min>
                <max>  0.530 </max>
            </domain>
            <range>
                <min> -1 </min>
                <max>  1 </max>
            </range>
            <output>fcs/rudder-pos-norm</output>
        </aerosurface_scale>
        
    </channel>
    
    <channel name="Slats">
        
        <!--Set slats according to http://www.smartcockpit.com/docs/Embraer_190-Flight_Controls.pdf page 4-->
        <fcs_function name="Slats Cmd">
            <function>
                <table>
                    <independentVar>/controls/flight/flaps</independentVar>
                    <tableData>
                        0.000   0
                        0.125  15
                        0.250  15
                        0.375  15
                        0.500  25
                        0.625  25
                        0.750  25
                    </tableData>
                </table>
            </function>
            <output>fcs/slat-cmd-int-deg</output>
        </fcs_function>
        
        <kinematic name="Slats Control">
            <input>fcs/slat-cmd-int-deg</input>
            <noscale/>
            <traverse>
                <setting>
                    <position>0.0</position>
                    <time>0.0000</time>
                </setting>
                <setting>
                    <position>15</position>
                    <time>2.0000</time>
                </setting>
                <setting>
                    <position>25</position>
                    <time>1.5000</time>
                </setting>
            </traverse>
            <output>fcs/slat-pos-deg</output>
        </kinematic>
        
        <aerosurface_scale name="slat normalization">
            <input>fcs/slat-pos-deg</input>
            <domain>
                <min>  0 </min>
                <max> 25 </max>
            </domain>
            <range>
                <min> 0 </min>
                <max> 1 </max>
            </range>
            <output>fcs/slat-pos-norm</output>
        </aerosurface_scale>
        
    </channel>
    
    
    
    
    <channel name="Flaps">
        
        
        <!-- Set flaps according to http://www.smartcockpit.com/docs/Embraer_190-Flight_Controls.pdf page 4-->
        <fcs_function name="Flaps Cmd">
            <function>
                <table>
                    <independentVar>/controls/flight/flaps</independentVar>
                    <tableData>
                        0.000   0
                        0.125   5
                        0.250  10
                        0.375  20
                        0.500  20
                        0.625  20
                        0.750  35
                    </tableData>
                </table>
            </function>
            <output>fcs/flap-cmd-int-deg</output>
        </fcs_function>
        
        <kinematic name="Flaps Control">
            <input>fcs/flap-cmd-int-deg</input>
            <noscale/>
            <traverse>
                <setting>
                    <position>0</position>
                    <time>0.0000</time>
                </setting>
                <setting>
                    <position>5</position>
                    <time>2.0000</time>
                </setting>
                <setting>
                    <position>10</position>
                    <time>2.0000</time>
                </setting>
                <setting>
                    <position>20</position>
                    <time>2.0000</time>
                </setting>
                <setting>
                    <position>35</position>
                    <time>3.0000</time>
                </setting>
            </traverse>
            <output>fcs/flap-pos-deg</output>
        </kinematic>
        
        <aerosurface_scale name="flap normalization">
            <input>fcs/flap-pos-deg</input>
            <domain>
                <min>  0 </min>
                <max> 35 </max>
            </domain>
            <range>
                <min> 0 </min>
                <max> 1 </max>
            </range>
            <output>fcs/flap-pos-norm</output>
        </aerosurface_scale>
        
    </channel>
    
    <channel name="Landing Gear">
        <kinematic name="Gear Control">
            <input>gear/gear-cmd-norm</input>
            <traverse>
                <setting>
                    <position> 0 </position>
                    <time>     0 </time>
                </setting>
                <setting>
                    <position> 1 </position>
                    <time>     15 </time>
                </setting>
            </traverse>
            <output>gear/gear-pos-norm</output>
        </kinematic>
        
    </channel>

    <channel name="Steering">
        <switch name="/controls/gear/tiller-disabled">
            <default value="0"/>
            <test logic="AND" value="1">
                /controls/gear/enable-tiller == 0
            </test>
        </switch>
        
        <fcs_function name="Nose Wheel Steering Limit 0">
          <function name="fcs/steer-nose-limit-deg[0]">
            <ifthen>
              <eq>
                <property>/sim/model/autopush/connected</property>
                <value>1</value>
              </eq>
              <value>76</value>
              <table>
                  <independentVar lookup="row">/velocities/groundspeed-kt</independentVar>
                  <tableData>
                      0.0 76
                     10.0 76
                     26.2 20
                     89.0 20
                    100.0  7
                  </tableData>
              </table>
            </ifthen>
          </function>
        </fcs_function>

        <fcs_function name="Nose Wheel Steering 0">
          <function name="fcs/steer-nose-deg[0]">
            <description>Steering command for nose gear</description>
            <ifthen>
              <eq>
                <property>/sim/model/autopush/connected</property>
                <value>1</value>
              </eq>
              <product>
                <property>/sim/model/autopush/autopush-cmd-norm</property>
                <value>70</value>
              </product>
              <ifthen>
                <property>gear/unit[0]/castered</property>
                <property>gear/unit[0]/steering-angle-deg</property>
                <ifthen>
                  <eq>
                    <property>/controls/gear/enable-tiller</property>
                    <value>1</value>
                  </eq>

                  <!-- Tiller enabled: rudder pedals command +/- 7Â°, tiller follows IRL schedule. -->
                  <ifthen>
                    <property>/options/controls/realistic-nose-wheel-steering</property>
                    
                    <!-- Realistic NWS: tiller must be kept down for tiller
                         steering; rudder pedals only steer when tiller up. -->
                      <min>
                        <property>fcs/steer-nose-limit-deg[0]</property>
                        <max>
                          <property>-fcs/steer-nose-limit-deg[0]</property>
                          <ifthen>
                            <property>/controls/gear/tiller-pushed</property>
                            <!-- tiller down -->
                            <table>
                              <independentVar lookup="row">/controls/gear/tiller-cmd-norm</independentVar>
                              <tableData>
                                  -1.000 -76
                                  -0.625 -25
                                  -0.250  -5
                                  0.000   0
                                  0.250   5
                                  0.625  25
                                  1.000  76
                              </tableData>
                            </table>
                            <!-- tiller up -->
                            <product>
                              <property>/controls/flight/rudder</property>
                              <value>7</value>
                            </product>
                          </ifthen>
                        </max>
                    </min>

                      <!-- tiller up -->

                    <min>
                        <property>fcs/steer-nose-limit-deg[0]</property>
                        <max>
                            <property>-fcs/steer-nose-limit-deg[0]</property>
                            <sum>
                                <table>
                                  <independentVar lookup="row">/controls/gear/tiller-cmd-norm</independentVar>
                                  <tableData>
                                    -1.000 -76
                                    -0.625 -25
                                    -0.250  -5
                                     0.000   0
                                     0.250   5
                                     0.625  25
                                     1.000  76
                                  </tableData>
                                </table>
                                <product>
                                  <property>/controls/flight/rudder</property>
                                  <value>7</value>
                                </product>
                            </sum>
                        </max>
                    </min>
                  </ifthen>

                  <!-- Tiller disabled: rudder pedals command up to NWS limit. -->
                  <product>
                    <property>/controls/flight/rudder</property>
                    <property>fcs/steer-nose-limit-deg[0]</property>
                  </product>
                </ifthen>
              </ifthen>
            </ifthen>
          </function>
        </fcs_function>
        
        <actuator name="Gear Nose Actuator">
          <input>fcs/steer-nose-deg[0]</input>
          <rate_limit>70</rate_limit>
          <output>fcs/steer-pos-deg[0]</output>
        </actuator>
    </channel>
    
