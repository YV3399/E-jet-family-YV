<?xml version = '1.0' encoding = 'UTF-8' ?>
<PropertyList>

    <path>../../Models/Primus-Epic/generic-efis-screen.ac</path>

    <!-- Power on/off -->
    <animation>
        <name>Power on/off</name>
        <type>select</type>
        <object-name>off</object-name>
        <condition>
            <less-than>
                <property>systems/electrical/outputs/mfd[1]</property>
                <value>15</value>
            </less-than>
        </condition>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>screen</object-name>
        <bias>1.8027756377319946</bias>
        <factor>0.25</factor>
        <axis>
            <x>1</x>
            <y>-1.5</y>
        </axis>
    </animation>

    <animation>
        <type>touch</type>
        <object-name>screen</object-name>
        <action>
            <touch>0</touch>
            <repeatable>false</repeatable>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var mfd = canvas_mfd.mfd[1];
                    if (mfd != nil) {
                        mfd.touch(cmdarg().getValues());
                    }
                ]]></script>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>frame</object-name>
        <decrease>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var mfd = canvas_mfd.mfd[1];
                    if (mfd != nil) {
                        mfd.scroll(-1, 0);
                    }
                ]]></script>
            </binding>
        </decrease>
        <increase>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var mfd = canvas_mfd.mfd[1];
                    if (mfd != nil) {
                        mfd.scroll(1, 0);
                    }
                ]]></script>
            </binding>
        </increase>
        <shift-decrease>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var mfd = canvas_mfd.mfd[1];
                    if (mfd != nil) {
                        mfd.scroll(-1, 1);
                    }
                ]]></script>
            </binding>
        </shift-decrease>
        <shift-increase>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var mfd = canvas_mfd.mfd[1];
                    if (mfd != nil) {
                        mfd.scroll(1, 1);
                    }
                ]]></script>
            </binding>
        </shift-increase>
    </animation>

</PropertyList>
