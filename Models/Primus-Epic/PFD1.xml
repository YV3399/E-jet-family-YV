<?xml version = '1.0' encoding = 'UTF-8' ?>
<PropertyList>
    
    <path>../../Models/Primus-Epic/generic-efis-screen.ac</path>
    
    <params>
        <index>0</index>
    </params>
    
    <!-- Power on/off -->
    <animation>
        <name>Power on/off</name>
        <type>select</type>
        <object-name>off</object-name>
        <condition>
            <less-than>
                <property>systems/electrical/outputs/pfd[1]</property>
                <value>15</value>
            </less-than>
        </condition>
    </animation>

    <animation>
        <type>texmultiple</type>
        <object-name>screen</object-name>
        <transform>
            <subtype>textranslate</subtype>
            <bias>0</bias>
            <factor>0.25</factor>
            <axis>
                <x>1</x>
                <y>0</y>
            </axis>
        </transform>
        <transform>
            <subtype>textranslate</subtype>
            <bias>1</bias>
            <factor>0.375</factor>
            <axis>
                <x>0</x>
                <y>-1</y>
            </axis>
        </transform>
    </animation>
    
    <animation>
        <type>touch</type>
        <object-name>screen</object-name>
        <action>
            <touch>0</touch>
            <repeatable>false</repeatable>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var pfd = canvas_pfd.pfd[1];
                    if (pfd != nil) {
                        pfd.touch(cmdarg().getValues());
                    }
                ]]></script>
            </binding>
        </action>
    </animation>
    
    <animation>
        <type>knob</type>
        <object-name>frame</object-name>
        <decrease>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var pfd = canvas_pfd.pfd[1];
                    if (pfd != nil) {
                        pfd.scroll(-1, 0);
                    }
                ]]></script>
            </binding>
        </decrease>
        <increase>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var pfd = canvas_pfd.pfd[1];
                    if (pfd != nil) {
                        pfd.scroll(1, 0);
                    }
                ]]></script>
            </binding>
        </increase>
        <shift-decrease>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var pfd = canvas_pfd.pfd[1];
                    if (pfd != nil) {
                        pfd.scroll(-1, 1);
                    }
                ]]></script>
            </binding>
        </shift-decrease>
        <shift-increase>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var pfd = canvas_pfd.pfd[1];
                    if (pfd != nil) {
                        pfd.scroll(1, 1);
                    }
                ]]></script>
            </binding>
        </shift-increase>
    </animation>
</PropertyList>
