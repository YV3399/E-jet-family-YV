<PropertyList>

<!-- Interior Cabin -->
  <model>
    <path>Aircraft/E-jet-family/XMLs/Cabin/erj170-cabin.xml</path>
  </model>

	<model>
		<name>Aircraft</name>
		<path>Aircraft/E-jet-family/XMLs/ERJ-170-Model.xml</path>
	</model>

	<model>
		<name>Stairs</name>
		<path>Aircraft/E-jet-family/XMLs/ERJ170-stairs.xml</path>
	</model>

	<model>
		<name>Flightdeck</name>
		<path>Aircraft/E-jet-family/XMLs/FlightDeck/erj.flightdeck.xml</path>
	</model>


	<!-- Other non-aircraft models -->

	<!-- Ram Air Turbine -->

	<model>
		<name>RAT</name>
		<path>Aircraft/E-jet-family/XMLs/RAT.xml</path>
		<offsets>
			<x-m>2.0</x-m>
			<y-m>0</y-m>
			<z-m>-1.768</z-m>
		</offsets>
	</model>

	<!-- Airport operations -->

	<model>
		<name>Pushback</name>
		<path>Models/Airport/Pushback/Goldhofert.xml</path>
		<offsets>
			<x-m>-12.4</x-m>
			<y-m>0</y-m>
			<z-m>-2.27</z-m>
		</offsets>
	</model>

 	<model>
 	<name>Followme</name>
	 <path>Aircraft/E-jet-family/Models/Operations/followme.ac</path>
	 <condition>
	 <equals>
			             <property>controls/switches/followme</property>
                                            <value type="bool">true</value>
 	</equals>
            <less-than>
                <property>velocities/airspeed-kt</property>
                <value>80</value>
            </less-than>
 	 </condition>   
	</model>


	 <model>
 	<name>Operations</name>
 	<path>Aircraft/E-jet-family/Models/Operations/operations.ac</path>
	  <condition>
 	<equals>
			             <property>controls/switches/operations</property>
                                            <value type="bool">true</value>
	 </equals>
            <less-than>
                <property>velocities/airspeed-kt</property>
                <value>15</value>
            </less-than>
	  </condition>   
	</model>

	 <model>
 	<name>Ground Emergency</name>
 	<path>Aircraft/E-jet-family/Models/Operations/emergency-land.ac</path>
	  <condition>
 	<equals>
			             <property>controls/switches/emer.ground</property>
                                            <value type="bool">true</value>
	 </equals>
            <less-than>
                <property>velocities/airspeed-kt</property>
                <value>15</value>
            </less-than>
	  </condition>   
	</model>

	 <model>
 	<name>Ground Emergency</name>
 	<path>Aircraft/E-jet-family/Models/Operations/emergency-land2.ac</path>
	  <condition>
 	<equals>
			             <property>controls/switches/emer.ground</property>
                                            <value type="bool">true</value>
	 </equals>
            <less-than>
                <property>velocities/airspeed-kt</property>
                <value>15</value>
            </less-than>
	  </condition>   
	</model>

	 <model>
 	<name>Water Emergency Left</name>
 	<path>Aircraft/E-jet-family/Models/Operations/emergency-water-tilt-left.ac</path>
	  <condition>
 	<equals>
			             <property>controls/switches/emer.water.left</property>
                                            <value type="bool">true</value>
	 </equals>
            <less-than>
                <property>velocities/airspeed-kt</property>
                <value>15</value>
            </less-than>
	  </condition>   
	</model>

