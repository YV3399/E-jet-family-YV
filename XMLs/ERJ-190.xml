<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>
    
    <!-- Interior Cabin -->
    <model>
        <path>Aircraft/E-jet-family/XMLs/Cabin/erj190-cabin.xml</path>
    </model>
    
    <model>
        <name>Aircraft</name>
        <path>Aircraft/E-jet-family/XMLs/ERJ-190-Model.xml</path>
    </model>
    
    <model>
        <name>Stairs</name>
        <path>Aircraft/E-jet-family/XMLs/ERJ190-stairs.xml</path>
    </model>
    
    <model>
        <name>Flightdeck</name>
        <path>Aircraft/E-jet-family/XMLs/FlightDeck/erj.flightdeck.xml</path>
        <offsets>
            <x-m>-2</x-m>
        </offsets>
    </model>
    
    <model>
        <name>RAT</name>
        <path>Aircraft/E-jet-family/XMLs/RAT.xml</path>
        <offsets>
            <x-m>2.0</x-m>
            <y-m>0</y-m>
            <z-m>-1.768</z-m>
        </offsets>
    </model>
    
    <!-- Other non-aircraft models -->
    <!-- Airport operations -->
    
    <model>
        <name>Pushback</name>
        <path>Models/Autopush/pushback.xml</path>
        <offsets>
            <x-m>-12.7</x-m>
            <y-m> 0.00 </y-m>
            <z-m>-2.0</z-m>
        </offsets>
    </model>
    
    <model>
        <name>Followme</name>
        <path>Aircraft/E-jet-family/Models/Operations/followme.ac</path>
        <condition>
            <equals>
                <property>controls/switches/followme</property>
                <value type="bool">true</value>
            </equals>
            <less-than>
                <property>velocities/airspeed-kt</property>
                <value>80</value>
            </less-than>
        </condition>
        
    </model>
    
    
    <model>
        <name>Operations</name>
        <path>Aircraft/E-jet-family/Models/Operations/operations.ac</path>
        <condition>
            <equals>
                <property>controls/switches/operations</property>
                <value type="bool">true</value>
            </equals>
            <less-than>
                <property>velocities/airspeed-kt</property>
                <value>15</value>
            </less-than>
        </condition>
        
    </model>
    
    <model>
        <name>Ground Emergency</name>
        <path>Aircraft/E-jet-family/Models/Operations/emergency-land.ac</path>
        <offsets>
            <x-m> -2</x-m>    
        </offsets>
        <condition>
            <equals>
                <property>controls/switches/emer.ground</property>
                <value type="bool">true</value>
            </equals>
            <less-than>
                <property>velocities/airspeed-kt</property>
                <value>15</value>
            </less-than>
        </condition>
        
    </model>
    
    <model>
        <name>Ground Emergency</name>
        <path>Aircraft/E-jet-family/Models/Operations/emergency-land2.ac</path>
        <offsets>
            <x-m> 4</x-m>    
        </offsets>
        <condition>
            <equals>
                <property>controls/switches/emer.ground</property>
                <value type="bool">true</value>
            </equals>
            <less-than>
                <property>velocities/airspeed-kt</property>
                <value>15</value>
            </less-than>
        </condition>
        
    </model>
    
    <model>
        <name>Water Emergency Left</name>
        <path>Aircraft/E-jet-family/Models/Operations/emergency-water-tilt-left.ac</path>
        <offsets>
            <x-m> -2</x-m>    
        </offsets>
        <condition>
            <equals>
                <property>controls/switches/emer.water.left</property>
                <value type="bool">true</value>
            </equals>
            <less-than>
                <property>velocities/airspeed-kt</property>
                <value>15</value>
            </less-than>
        </condition>
        
    </model>
    
    
    <!-- Aircraft Lighting -->
    
    <!--LANDING LIGHTS-->
    <model>
        <path>Aircraft/E-jet-family/Models/light/ALS/landinglightL.xml</path>
        <name>LeftWingLandinglight-ALS</name>
        <offsets>
            <x-m>-3.68</x-m>
            <y-m>-2.25</y-m>
            <z-m> -0.24</z-m>  
        </offsets>
    </model>
    <model>
        <path>Aircraft/E-jet-family/Models/light/ALS/landinglightR.xml</path>
        <name>RightWingLandinglight-ALS</name>
        <offsets>
            <x-m>-3.68</x-m>
            <y-m>2.25</y-m>
            <z-m> -0.24</z-m>  
        </offsets>
    </model>
    <model>
        <path>Aircraft/E-jet-family/Models/light/ALS/landinglightF.xml</path>
        <name>NoseGearLandinglight-ALS</name>
        <offsets>
            <x-m> -12.93</x-m>
            <y-m>  0.00</y-m> 
            <z-m> -1.45</z-m>   
        </offsets>
    </model>
    
    <model>
        <path>Aircraft/E-jet-family/XMLs/Lights/landing-nose.xml</path>
        <name>NoseGearLandinglight</name>     
        <condition>
            <equals>
                <property>gear/gear[0]/position-norm</property>
                <value type="bool">true</value>
            </equals>
        </condition>
        
        <offsets>
            <x-m> -12.93</x-m>
            <y-m>  0.00</y-m> 
            <z-m> -1.45</z-m>      
        </offsets>
    </model>
    
    <model>
        <path>Aircraft/E-jet-family/XMLs/Lights/landing-port.xml</path>
        <name>LeftWingLandinglight</name>
        <condition>
            <equals>
                <property>gear/gear[1]/position-norm</property>
                <value type="bool">true</value>
            </equals>
        </condition>
        
        <offsets>
            <x-m>-3.68</x-m>
            <y-m>-2.25</y-m>
            <z-m> -0.24</z-m>      
        </offsets>
    </model>
    
    <model>
        <path>Aircraft/E-jet-family/XMLs/Lights/landing-stbd.xml</path>
        <name>RightWingLandinglight</name>
        <condition>
            <equals>
                <property>gear/gear[2]/position-norm</property>
                <value type="bool">true</value>
            </equals>
        </condition>
        
        <offsets>
            <x-m>-3.68</x-m>
            <y-m> 2.25</y-m>
            <z-m> -0.24</z-m> 
        </offsets>
    </model>
    
    <model>
        <name>beaconT</name>
        <path>Aircraft/E-jet-family/Models/light/beacon.xml</path>
        <offsets>
            <x-m>4.18</x-m>
            <y-m>0.00</y-m>
            <z-m>2.38</z-m> 
        </offsets>
    </model>
    <model>
        <name>beaconT-ALS</name>
        <path>Aircraft/E-jet-family/Models/light/ALS/beacon.xml</path>
        <offsets>
            <x-m>4.18</x-m>
            <y-m>0.00</y-m>
            <z-m>2.38</z-m> 
        </offsets>
    </model>
    
    <model>
        <name>beaconB</name>
        <path>Aircraft/E-jet-family/Models/light/beacon.xml</path>
        <offsets>
            <x-m>-9.62</x-m>
            <y-m> 0.00</y-m>
            <z-m>-1.10</z-m> 
        </offsets>
    </model>
    <model>
        <name>beaconB-ALS</name>
        <path>Aircraft/E-jet-family/Models/light/ALS/beacon.xml</path>
        <offsets>
            <x-m>-9.62</x-m>
            <y-m> 0.00</y-m>
            <z-m>-1.10</z-m> 
        </offsets>
    </model>
    
    <animation>
        <type>select</type>
        <object-name>beaconT</object-name>
        <object-name>beaconB</object-name>
        <object-name>LeftWingLandinglight</object-name>
        <object-name>RightWingLandinglight</object-name>
        <object-name>NoseGearLandinglight</object-name>
        <condition>
            <not>
                <property>/sim/rendering/shaders/skydome</property>
            </not>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>beaconT-ALS</object-name>
        <object-name>beaconB-ALS</object-name>
        <object-name>LeftWingLandinglight-ALS</object-name>
        <object-name>RightWingLandinglight-ALS</object-name>
        <object-name>NoseGearLandinglight-ALS</object-name>
        <condition>
            <property>/sim/rendering/shaders/skydome</property>
        </condition>
    </animation>
    
    <animation>
        <type>noshadow</type>
        <object-name>RedLight-ALS</object-name>
        <object-name>GreenLight-ALS</object-name>
        <object-name>LeftStrobe-ALS</object-name>
        <object-name>RightStrobe-ALS</object-name>
        <object-name>beaconT-ALS</object-name>
        <object-name>beaconB-ALS</object-name>
        <object-name>LeftWingLandinglight-ALS</object-name>
        <object-name>RightWingLandinglight-ALS</object-name>
        <object-name>NoseGearLandinglight-ALS</object-name>
    </animation>
    
    
    <!-- Tyre Smoke -->
    
    <model>
        <path>Aircraft/E-jet-family/XMLs/Effects/tyre-smoke-nose.xml</path>
        <name>tyre-smoke-n</name>
        <offsets>
            <x-m>-12.54</x-m>
            <y-m>0</y-m>
            <z-m>-2.26</z-m>  
        </offsets>
    </model>
    
    
    <model>
        <path>Aircraft/E-jet-family/XMLs/Effects/tyre-smoke-left.xml</path>
        <name>tyre-smoke-l</name>
        <offsets>
            <x-m>-0.88</x-m>
            <y-m>-2.55</y-m>
            <z-m>-2.26</z-m> 
        </offsets>
    </model>
    
    <model>
        <path>Aircraft/E-jet-family/XMLs/Effects/tyre-smoke-right.xml</path>
        <name>tyre-smoke-r</name>
        <offsets>
            <x-m>-0.88</x-m>
            <y-m> 2.55</y-m>
            <z-m>-2.26</z-m> 
        </offsets>
    </model>
    
    <!-- Lights -->
    <animation>
        <name>logo light illumination</name>
        <type>material</type>
        <object-name>winglet.l</object-name>
        <object-name>winglet.r</object-name>
        <emission>
            <red>0.25</red>
            <green>0.25</green>
            <blue>0.25</blue>
            <factor-prop>controls/lighting/logo</factor-prop>
        </emission>
    </animation>
    
</PropertyList>
