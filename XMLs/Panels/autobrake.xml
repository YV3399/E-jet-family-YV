<PropertyList>
    <path>../../Models/Panels/autobrake.ac</path>


    <effect>
        <inherits-from>Models/Effects/panel-lighting</inherits-from>
        <object-name>base</object-name>
    </effect>

    <animation>
        <type>knob</type>
        <object-name>lever</object-name>
        <property>/autopilot/autobrake/step</property>
        <interpolation>
            <entry>
                <ind>-1</ind><dep>60</dep>
            </entry>
            <entry>
                <ind>0</ind><dep>0</dep>
            </entry>
            <entry>
                <ind>1</ind><dep>-33.33</dep>
            </entry>
            <entry>
                <ind>2</ind><dep>-66.66</dep>
            </entry>
            <entry>
                <ind>3</ind><dep>-90</dep>
            </entry>
        </interpolation>
        <center>
            <y-m> 0.00032 </y-m>
            <z-m> -0.01695 </z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/autopilot/autobrake/step</property>
                <factor>1</factor>
                <min>-1</min>
                <max>3</max>
                <wrap>false</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>autobrake</tooltip-id>
                <label>Autobrake: %s</label>
                <property>/autopilot/autobrake/step</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['OFF', 'LO', 'MED', 'HI', 'RTO'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
    </animation>

    <animation>
        <name>LitElems</name>
        <object-name>base</object-name>
        <object-name>lever</object-name>
        <object-name>Circle.001</object-name>
        <object-name>Circle.003</object-name>
    </animation>

    <animation>
        <name>BacklitElements</name>
    </animation>

    <animation>
        <type>material</type>
        <object-name>LitElems</object-name>
        <condition>
            <property>controls/lighting/dome</property>
        </condition>
        <emission>
            <red>0.35</red>
            <green>0.3</green>
            <blue>0.14</blue>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>BacklitElements</object-name>

        <condition>
            <and>
                <less-than>
                    <property>/systems/electrical/left-bus</property>
                    <value>12.0</value>
                </less-than>
                <not>
                    <property>controls/lighting/dome</property>
                </not>
            </and>
        </condition>
        <emission>
            <red>0</red>
            <green>0</green>
            <blue>0</blue>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>BacklitElements</object-name>

        <condition>
            <and>
                <less-than>
                    <property>/systems/electrical/left-bus</property>
                    <value>12.0</value>
                </less-than>
                <property>controls/lighting/dome</property>
            </and>
        </condition>
        <emission>
            <red>0.35</red>
            <green>0.3</green>
            <blue>0.14</blue>
        </emission>
    </animation>

</PropertyList>
