			</volume>
			<pitch>
				<property>engines/engine[0]/n1</property>
				<offset>0</offset>
				<factor>0.01</factor>
			</pitch>
            <position>
                <x>-3.3</x>
                <y>4.1</y>
                <z>-1</z>
