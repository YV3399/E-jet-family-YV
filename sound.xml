            <condition>
                <or>
                    <!-- radio minimums set -->
                    <and>
                        <equals>
                            <property>/instrumentation/pfd/minimums-mode</property>
                            <value>0</value>
                        </equals>
                        <less-than>
                            <property>/position/gear-agl-ft</property>
                            <expression>
                                <sum>
                                    <value>100</value>
                                    <property>/instrumentation/pfd/minimums-radio</property>
                                </sum>
                            </expression>
                        </less-than>
                        <greater-than>
                            <property>/position/gear-agl-ft</property>
                            <property>/instrumentation/pfd/minimums-radio</property>
                        </greater-than>
                    </and>
                    <!-- baro minimums set -->
                    <and>
                        <equals>
                            <property>/instrumentation/pfd/minimums-mode</property>
                            <value>1</value>
                        </equals>
                        <less-than>
                            <property>/position/gear-agl-ft</property>
                            <expression>
