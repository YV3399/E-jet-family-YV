<PropertyList>
    <fx>
		<!-- Engine 1 -->
		<engine>
			<name>Engine 1 sound 1 external</name>
			<path>Sounds/whine.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<not>
						<property>sim/current-view/internal</property>
					</not>
					<greater-than>
						<property>engines/engine[0]/n1</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition>
			<volume>
				<property>engines/engine[0]/n1</property>
				<offset>0</offset>
				<factor>0.01</factor>
			</volume>
			<pitch>
				<property>engines/engine[0]/n1</property>
				<offset>0.5</offset>
				<factor>0.02</factor>
			</pitch>
            <position>
                <x>-3.3</x>
                <y>4.1</y>
                <z>-1</z>
            </position>
		</engine>
		<engine>
			<name>Engine 1 sound 2 external</name>
			<path>Sounds/jet.wav</path>
