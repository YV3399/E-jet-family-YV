		<!-- APU, same for inside and outside -->
		<apu>
			<name>APU starting</name>
			<mode>once</mode>
			<path>Sounds/apu_start.wav</path>
			<condition>
				<and>
					<greater-than>
						<property>engines/apu/rpm</property>
						<value>0</value>
					</greater-than>
					<greater-than>
						<property>engines/apu/rpm-target</property>
						<value>50</value>
					</greater-than>
					<less-than>
                        <property>engines/apu/rpm</property>
                        <value>95</value>
					</less-than>
				</and>
			</condition>
			<volume>
				<property>sim/sound/apu-vol</property>
			</volume>
			<reference-dist>10</reference-dist>
			<max-dist>500</max-dist>
			<position>
				<x>15.24</x>
				<y>0.01</y>
				<z>-0.70</z>
			</position>
		</apu>
		<apu>
			<name>APU running</name>
			<mode>looped</mode>
			<path>Sounds/apu_run.wav</path>
			<condition>
                <greater-than>
                    <property>engines/apu/rpm</property>
                    <value>94.99</value>
                </greater-than>
			</condition>
			<volume>
				<property>sim/sound/apu-vol</property>
			</volume>
			<reference-dist>10</reference-dist>
			<max-dist>500</max-dist>
			<position>
				<x>15.24</x>
				<y>0.01</y>
				<z>-0.70</z>
			</position>
		</apu>
		<apu>
			<name>APU shutdown</name>
			<mode>once</mode>
			<path>Sounds/apu_shutdown.wav</path>
			<condition>
				<and>
					<greater-than>
						<property>engines/apu/rpm</property>
						<value>0</value>
					</greater-than>
					<less-than>
						<property>engines/apu/rpm-target</property>
						<value>50</value>
					</less-than>
					<less-than>
                        <property>engines/apu/rpm</property>
                        <value>95</value>
					</less-than>
				</and>
			</condition>
			<volume>
				<property>sim/sound/apu-vol</property>
			</volume>
			<reference-dist>10</reference-dist>
			<max-dist>500</max-dist>
			<position>
				<x>15.24</x>
				<y>0.01</y>
				<z>-0.70</z>
			</position>
		</apu>

        <gear>
            <name>gear</name>
            <mode>in-transit</mode>
            <path>Aircraft/E-jet-family/Sounds/landing-gear.wav</path>
            <property>/gear/gear[0]/position-norm</property>
			<volume>
				<property>sim/sound/gear-vol</property>
			</volume>
            <pitch>
                <offset>-0.75</offset>
            </pitch>
        </gear>
        <gear>
            <name>gear lock</name>
            <mode>once</mode>
            <path>Sounds/gear-lck.wav</path>
            <condition>
                <equals>
                    <property>/gear/gear[0]/position-norm</property>
                    <value>1</value>
                </equals>
            </condition>
			<volume>
				<property>sim/sound/gear-vol</property>
			</volume>
            <pitch>
                <offset>-0.5</offset>
            </pitch>
        </gear>


        <rumblefront>
            <name>nose wheel rumble</name>
            <mode>looped</mode>
            <path>Sounds/rumble.wav</path>
            <condition>
                <property>/gear/gear[0]/wow</property>
            </condition>
            <volume>
                <property>/velocities/groundspeed-kt</property>
                <type>log</type>
                <factor>0.25</factor>
            </volume>
            <position>
                <x>-22</x>
                <y>0</y>
                <z>-5</z>
            </position>
            <reference-dist>10.0</reference-dist>
            <max-dist>25.0</max-dist>
        </rumblefront>

        <rumblemain>
            <name>main gear rumble</name>
            <mode>looped</mode>
            <path>Sounds/rumble.wav</path>
            <condition>
                <or>
                    <property>/gear/gear[1]/wow</property>
                    <property>/gear/gear[2]/wow</property>
                </or>
            </condition>
            <volume>
                <property>/velocities/groundspeed-kt</property>
                <type>log</type>
                <factor>0.25</factor>
            </volume>
            <position>
                <x>-6.5</x>
                <y>0</y>
                <z>-5</z>
            </position>
            <reference-dist>10.0</reference-dist>
            <max-dist>25.0</max-dist>
        </rumblemain>

